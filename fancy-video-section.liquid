{% if template == 'page.corporate' %}
<link href="//cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css" rel="stylesheet" type="text/css" media="all">
<script src="//cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.js" type="text/javascript"></script>
{% endif %}

<div class="play-circle-container">
  <div class="play-circle">
   <a data-fancybox="gallery" href="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?rel=0&showinfo=0&vq=720" class="play-btn" data-width="980" data-height="550" id="video-fancybox"><div class="play-tri-container"><div class="play-tri"></div></div></a>
  </div>
</div>

<style>
.play-circle-container {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  display: grid;
  place-content: center;
}
.play-circle {
  width: 100px;
  height: 100px;
  border: 3px solid #dba2cc;
  border-radius: 50%;
  background-color: #0000003b;
}
.play-tri-container {
  width: 100%;
  height: 100%;
  display: grid;
  place-content: center;
}
.play-tri {
  width: 0;
  height: 0;
  border-top: 23px solid transparent;
  border-bottom: 23px solid transparent;
  border-left: 37px solid #dba2cc;
}
</style>

{% schema %}
{
  "name": "Fancy Video",
  "class": "fancy-video-section",
  "settings": [
    {
      "type": "header",
      "content": "Video Section"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "label": "Video Url",
      "accept": ["youtube"],
      "default": "https://www.youtube.com/watch?v=nM5mP4CSE28"
    }
  ]
}
{% endschema %}
